definition(
    name: "On / Off Switch Button Handler",
    namespace: "michaeljcohen",
    author: "Michael Cohen",
    description: "Use a GoControl Wireless 2-button controller to turn a switch on and off.  Top button is on, bottom button is off",
    category: "",
    iconUrl: "https://s3.amazonaws.com/smartapp-icons/Convenience/Cat-Convenience.png",
    iconX2Url: "https://s3.amazonaws.com/smartapp-icons/Convenience/Cat-Convenience@2x.png",
    iconX3Url: "https://s3.amazonaws.com/smartapp-icons/Convenience/Cat-Convenience@2x.png")


preferences {
	section("Title") {
        input "twoButtonControl", "capability.button", required: true, title: "Two Button Control"
        input "switchOne", "capability.switch", required: true, title: "Switch To Control"
	}
}

def installed() {
	log.debug "Installed with settings: ${settings}"

	initialize()
}

def updated() {
	log.debug "Updated with settings: ${settings}"

	unsubscribe()
	initialize()
}

def initialize() {
    subscribe(twoButtonControl, "button.pushed", topPushedHandler)
}

def topPushedHandler(evt) {
    //log.debug evt.data
    
    def buttonNumber = parseJson(evt.data).buttonNumber

	if(buttonNumber == 1){
    	switchOne.on()
    }
    else if (buttonNumber == 2){
    	log.debug 'button 2!'
    	switchOne.off()
    }
}